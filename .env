# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_TRANSACTIONS=ecommerce-transactions
KAFKA_TOPIC_PROCESSED=processed-transactions
KAFKA_CONSUMER_GROUP=ecommerce-consumer-group

# Spark Configuration
SPARK_MASTER_URL=spark://spark-master:7077
SPARK_DRIVER_MEMORY=1g
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2

# Data Paths
DATA_RAW_PATH=/opt/spark-apps/data/raw
DATA_PROCESSED_PATH=/opt/spark-apps/data/processed
DATA_OUTPUT_PATH=/opt/spark-apps/data/output
DATA_CHECKPOINT_PATH=/opt/spark-apps/data/checkpoints

# Data Generation
EVENTS_PER_MINUTE=5000
BATCH_SIZE=100

# Logging
LOG_LEVEL=INFO
